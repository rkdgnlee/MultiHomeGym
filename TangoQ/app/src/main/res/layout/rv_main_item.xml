<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMItem"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/white">

    <View
        android:id="@+id/vM"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/effect_ibtn_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="Kcal"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMKcal"
        app:layout_constraintStart_toEndOf="@+id/tvMKcal"
        app:layout_constraintTop_toTopOf="@+id/tvMKcal" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView8"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivMThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:clipToOutline="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/background_button" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvMName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:singleLine="true"
        android:text="목 관절 운동 프로그램"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ibtnMMore"
        app:layout_constraintStart_toEndOf="@+id/cardView8"
        app:layout_constraintTop_toTopOf="@+id/cardView8"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvMSymptom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLength="20"
        android:singleLine="true"
        android:text="증상들 생략.."
        android:textColor="@color/subColor500"

        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tvMName"
        app:layout_constraintStart_toStartOf="@+id/tvMName"
        app:layout_constraintTop_toBottomOf="@+id/tvMName" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView8"
        app:layout_constraintStart_toStartOf="@+id/tvMSymptom"
        app:layout_constraintTop_toBottomOf="@+id/tvMSymptom"
        app:layout_constraintVertical_bias="0.9"
        app:srcCompat="@drawable/icon_rv_summary_time" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMStage"
        app:layout_constraintEnd_toStartOf="@+id/tvMStage"
        app:layout_constraintTop_toTopOf="@+id/tvMStage"
        app:srcCompat="@drawable/icon_rv_summary_intensity" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tvMStage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toEndOf="@+id/tvMStage"
        app:layout_constraintTop_toTopOf="@+id/tvMStage"
        app:srcCompat="@drawable/icon_kcal_main_color" />

    <TextView
        android:id="@+id/tvMTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="25"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <TextView
        android:id="@+id/tvMStage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회복"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView8"
        app:layout_constraintTop_toTopOf="@+id/tvMTime" />

    <TextView
        android:id="@+id/tvMKcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="48"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <ImageButton
        android:id="@+id/ibtnMMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/effect_ibtn_20dp"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_more" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="분"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMTime"
        app:layout_constraintStart_toEndOf="@+id/tvMTime"
        app:layout_constraintTop_toTopOf="@+id/tvMTime" />

</androidx.constraintlayout.widget.ConstraintLayout>