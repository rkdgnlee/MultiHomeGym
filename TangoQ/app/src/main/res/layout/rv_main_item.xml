<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMItem"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/white"
    android:paddingLeft="18sp"
    android:paddingTop="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="개"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMCount"
        app:layout_constraintStart_toEndOf="@+id/tvMCount"
        app:layout_constraintTop_toTopOf="@+id/tvMCount" />

    <ImageView
        android:id="@+id/ivMThumbnail"
        android:layout_width="92dp"
        android:layout_height="0dp"

        android:layout_marginStart="8dp"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/background_button" />

    <TextView
        android:id="@+id/tvMName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="목 관절 운동 프로그램"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivMThumbnail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvMSymptom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLength="20"
        android:text="증상들 생략.."
        android:textColor="@color/subColor500"
        android:textSize="14sp"

        app:layout_constraintStart_toStartOf="@+id/tvMName"
        app:layout_constraintTop_toBottomOf="@+id/tvMName" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvMSymptom"
        app:layout_constraintTop_toBottomOf="@+id/tvMSymptom"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/icon_rv_summary_time" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMIntensity"
        app:layout_constraintEnd_toStartOf="@+id/tvMIntensity"
        app:layout_constraintTop_toTopOf="@+id/tvMIntensity"
        app:srcCompat="@drawable/icon_rv_summary_intensity" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMCount"
        app:layout_constraintEnd_toStartOf="@+id/tvMCount"
        app:layout_constraintTop_toTopOf="@+id/tvMCount"
        app:srcCompat="@drawable/icon_rv_summary_count" />

    <TextView
        android:id="@+id/tvMTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="25"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <TextView
        android:id="@+id/tvMIntensity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회복"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivMThumbnail" />

    <TextView
        android:id="@+id/tvMCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvMIntensity"
        app:layout_constraintTop_toTopOf="@+id/tvMIntensity"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/ibtnMMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_more" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="분"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMTime"
        app:layout_constraintStart_toEndOf="@+id/tvMTime"
        app:layout_constraintTop_toTopOf="@+id/tvMTime" />
</androidx.constraintlayout.widget.ConstraintLayout>