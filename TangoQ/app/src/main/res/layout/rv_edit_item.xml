<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    android:padding="8dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="개"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvEditCount"
        app:layout_constraintStart_toEndOf="@+id/tvEditCount"
        app:layout_constraintTop_toTopOf="@+id/tvEditCount" />

    <ImageView
        android:id="@+id/ivEditDrag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_drag" />
    <ImageView
        android:id="@+id/ivEditThumbnail"
        android:layout_width="90dp"
        android:layout_height="0dp"

        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/background_button" />

    <TextView
        android:id="@+id/tvEditName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="목 관절 운동 프로그램"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivEditThumbnail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvEditSymptom"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginTop="2dp"
        android:maxLength="30"
        android:text="증상들 생략.."
        android:textColor="@color/subColor500"
        android:textSize="14sp"

        app:layout_constraintStart_toStartOf="@+id/tvEditName"
        app:layout_constraintTop_toBottomOf="@+id/tvEditName" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvEditSymptom"
        app:layout_constraintTop_toBottomOf="@+id/tvEditSymptom"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/icon_rv_summary_time" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvEditIntensity"
        app:layout_constraintEnd_toStartOf="@+id/tvEditIntensity"
        app:layout_constraintTop_toTopOf="@+id/tvEditIntensity"
        app:srcCompat="@drawable/icon_rv_summary_intensity" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvEditCount"
        app:layout_constraintEnd_toStartOf="@+id/tvEditCount"
        app:layout_constraintTop_toTopOf="@+id/tvEditCount"
        app:srcCompat="@drawable/icon_rv_summary_count" />

    <TextView
        android:id="@+id/tvEditTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="25"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <TextView
        android:id="@+id/tvEditIntensity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회복"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivEditThumbnail" />

    <TextView
        android:id="@+id/tvEditCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvEditIntensity"
        app:layout_constraintTop_toTopOf="@+id/tvEditIntensity"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="분"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvEditTime"
        app:layout_constraintStart_toEndOf="@+id/tvEditTime"
        app:layout_constraintTop_toTopOf="@+id/tvEditTime" />

</androidx.constraintlayout.widget.ConstraintLayout>