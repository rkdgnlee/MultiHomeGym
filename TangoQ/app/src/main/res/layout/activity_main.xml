<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnbMain"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@drawable/background_shadow_top_stroke"
        android:backgroundTintMode="add"
        android:clipToPadding="false"
        android:outlineProvider="none"
        android:persistentDrawingCache="none"
        android:stateListAnimator="@null"
        app:elevation="12dp"
        app:itemIconSize="32dp"
        app:itemPaddingBottom="20dp"
        app:itemPaddingTop="20dp"
        app:itemRippleColor="@color/white"
        app:itemTextColor="@color/subColor700"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/main_menu" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCl"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="@color/white">

            <ImageButton
                android:id="@+id/ibtnAlarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:background="@color/white"
                android:src="@drawable/icon_alarm"
                app:layout_constraintBottom_toBottomOf="@+id/tvCurrentPage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvCurrentPage" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="64dp"
                android:layout_height="38dp"

                android:layout_marginStart="20dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.05"
                app:srcCompat="@drawable/app_logo" />

            <TextView
                android:id="@+id/tvCurrentPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="현재 페이지"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView19"
                app:layout_constraintStart_toEndOf="@+id/imageView19"
                app:layout_constraintTop_toTopOf="@+id/imageView19" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/flMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/bnbMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvCl">

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>