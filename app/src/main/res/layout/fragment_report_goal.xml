<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportGoalFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainwhite">

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/schReportBluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="블루투스 사용"
            android:textColor="@color/mainblack"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:thumbIconTint="@color/mainwhite"
            app:thumbTint="@color/mainblack"
            app:trackDecorationTint="@color/mainblack"
            app:trackTint="@color/mainwhite"
            app:useMaterialThemeColors="false" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBLE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/schReportBluetooth" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>