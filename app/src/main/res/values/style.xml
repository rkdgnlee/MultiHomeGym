<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OrangeRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/mainColor</item>
        <item name="colorControlNormal">@color/grey230</item>
        <item name="colorOnContainer">@color/grey800</item>
        <item name="android:elevation">4dp</item>
    </style>
    
    <style name="tabTextSize" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.App.Button" parent="Widget.AppCompat.Button">
        <item name="colorAccent">@color/mainColor</item>
        <item name="colorOnPrimary">@color/mainblack</item>
        <item name="colorPrimary">@color/mainwhite</item>
        <item name="android:windowBackground">@color/mainwhite</item>
    </style>

    <style name="Theme.App.Checkbox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="colorOnPrimary">@color/mainwhite</item>
        <item name="colorPrimary">@color/mainColor</item>
    </style>
    <style name="Theme.App.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="colorOnPrimary">@color/mainwhite</item>
        <item name="colorPrimary">@color/mainColor</item>
    </style>

    <style name="Theme.App" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="checkboxStyle">@style/Theme.App.Checkbox</item>
        <item name="colorAccent">@color/mainColor</item>
        <item name="colorOnPrimary">@color/mainblack</item>
        <item name="colorPrimary">@color/mainwhite</item>
        <item name="android:windowBackground">@color/mainwhite</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">cut</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Theme_Design_BottomSheetDialog1" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">auto</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ExoMediaButton.FullScreen">
        <item name="android:background">@drawable/fullscreen_button</item>
    </style>

    <style name="DialogFragmentStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:radius">16dp</item>
    </style>

<!--    <style name="Theme.MHG.Dark." parent="Base.Theme.MHG">-->
<!--        <item name="android:windowBackground">@color/grey800</item>-->
<!--    </style>-->

</resources>